{% extends "base.twig" %}

{% block content %}
  <div class="container text-center p-42 mb-40 mt-48"  data-sal="slide-up" data-sal-delay="300" data-sal-duration="800">
  <form class="password-form" action="{{ site.wp_link }}/wp-login.php?action=postpass" method="post">

    <div class="field">
      <label for="pwbox-{{ post.ID }}" class="label">{{ messages.single_password.password }}</label>
      <p class="control has-icons-left">
        <input class="input border border-gray-700 rounded-md p-4 focus:outline-none flex-grow mr-px" type="password" maxlength="20" name="post_password" id="pwbox-{{ post.ID }}"/>
      </p>
    </div>

    <div class="field">
      <p class="control">
        <input type="submit" name="Submit" value="{{ messages.single_password.submit }}" class="button py-4 px-10 rounded-md hover:bg-gray-400 cursor-pointer"/>
      </p>
    </div>

  </form>  </div>
{% endblock %}
