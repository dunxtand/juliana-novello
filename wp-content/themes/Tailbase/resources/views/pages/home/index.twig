<div class="container pb-0 lg:pb-16">
    <section id="home-carousel">
        <case-studies-carousel>
        </case-studies-carousel>
    </section>
</div>

{% include 'pages/home/process.twig' %}

<div class="container w-full my-10" data-sal="fade-in" data-sal-duration="800" style="--sal-delay: 0s;">
    <h4 class="text-md border-t-2 border-black py-6">
        Our Services
    </h4>

    <div class="hidden lg:flex flex-row -mx-4">
        {% for service in services %}
            <div class="w-1/4 mx-4" data-sal="slide-right" data-sal-duration="800" data-sal-delay="{{ loop.index * 200 }}">
                {% include 'components/service_item.twig' with { service: service } %}
            </div>
        {% endfor %}
    </div>

    <div class="lg:hidden mb-16 overflow-hidden">
        <twig-carousel carousel-class="-mx-4">
            {% for service in services %}
                <slide>
                    <div class="mx-4">
                        {% include 'components/service_item.twig' with { service: service } %}
                    </div>
                </slide>
            {% endfor %}
        </twig-carousel>
    </div>

    <div class="w-full flex justify-center mt-10">
        <site-button url="/about">
            Learn About Us
        </site-button>
    </div>
</div>

<div class="container px-0 lg:pb-16">
    <section id="insights-carousel" data-sal="fade-in" data-sal-duration="800" style="--sal-delay: 0s;">
        <insights-carousel>
        </insights-carousel>
    </section>
</div>


<section id="feedback-carousel" data-sal="fade-in" data-sal-duration="800" style="--sal-delay: 0s;">
    <div class="container px-0 py-10 lg:py-16 overflow-x-visible">
        <feedback-carousel>
        </feedback-carousel>
    </div>
</section>

<section data-sal="fade-in" data-sal-duration="800" style="--sal-delay: 0s;">
    {% include 'components/friends-wall.twig' %}
</section>
