<div class="container px-0 lg:mt-24">
    <h1 class="insights-index-title text-4xl md:text-5xl lg:text-6xl aura uppercase py-16 lg:pt-16 lg:pb-20 splitMeByLine">
        Insights
    </h1>

    <div class="live-insight flex flex-col lg:flex-row items-end pt-6 lg:pt-0 border-t border-b lg:border-b-0 border-black lg:border-t-0 mb-6 lg:mb-16 featured_insight">
        <a href="{{ featured_insight.link }}" class="order-last lg:order-first w-full lg:w-1/4 pb-10 lg:pb-0 border-black pt-6 lg:pt-0 lg:mr-4 h-auto lg:h-full flex flex-col justify-between">
            <div class="hidden lg:block w-full border-t border-black"></div>
            <div href="{{ featured_insight.link }}" class="flex flex-col w-full text-lg xl:pr-3 h-auto lg:h-full">
                <div class="flex flex-col mt-auto">
                    <div class="flex flex-col mb-6 xl:mb-8">
                        <span>
                            {{ featured_insight.date }}
                        </span>
                        <h4 class="underline mt-1">
                            {{ featured_insight.title }}
                        </h4>
                    </div>
                    <p class="mb-6 xl:mb-8">
                        {{ featured_insight.description }}
                    </p>
                    <div class="insight-title">
                        <div class="inline-block">
                            <span>Keep Reading</span>
                            <hr class="bg-black"/>
                        </div>
                    </div>
                </div>
            </div>
        </a>
        <a href="{{ featured_insight.link }}" class="order-first lg:order-last w-full lg:w-3/4 lg:h-full lg:overflow-hidden flex">
            <img
                src="{{ featured_insight.image }}"
                alt="{{ featured_insight.title }}"
                class="lazyload object-cover mb-4 lg:mb-0 h-auto lg:h-full w-full flex justify-center"
            />
        </a>
    </div>
</div>

<div class="container">
    <expand-insights>

        {% for item in insights %}


                <template v-slot:insight-{{ loop.index }}>
                    <a href="{{ item.link }}" class="live-insight content flex flex-row lg:flex-col justify-between lg:px-2 lg:pt-2">
                        <div class="overflow-hidden">
                            <img
                                src="{{ item.image }}"
                                alt="{{ item.title }}"
                                class="lazyload w-full mr-0 object-cover hidden lg:block"
                            />
                        </div>
                        <img
                            src="{{ item.mobile_image }}"
                            alt="{{ item.title }}"
                            class="lazyload w-1/3 mr-4 object-cover lg:hidden"
                        />
                        <div class="w-2/3 md:w-full flex flex-col justify-between py-2 text-lg md:text-lg">
                            <div class="flex flex-col lg:mt-4 mb-4">
                                <span>
                                    {{ item.date }}
                                </span>
                                <h4 class="underline mt-1 lg:mt-0 text-xl md:text-2xl">
                                    {{ item.title }}
                                </h4>
                            </div>
                            <p class="hidden md:block">
                                {{ item.description }}
                            </p>
                            <div class="insight-title mt-4">
                                <div class="inline-block">
                                    <span>Keep Reading</span>
                                    <hr class="bg-black"/>
                                </div>
                            </div>
                        </div>
                    </a>
                </template>


        {% endfor %}

    </expand-insights>
</div>

