{% include 'components/back_link.twig' with { text: 'See All Case Studies', link: '/case-studies' } %}

<div class="flex flex-col lg:mt-24">

    <h6 class="uppercase text-sm sans-bold tracking-widest pt-10 pb-6 tracking">
        {{ post.title }}
    </h6>

    <h1 class="text-5xl lg:text-6xl leading-tight max-w-full splitMeByLine mb-4 lg:mb-0">
        {{ post.tagline }}
    </h1>

    {# awards list (mobile) #}
    <ul class="my-4 lg:hidden">
        {% for item in post.awards %}
            <li class="flex flex-row items-center mb-4">
                {% if item.link %}
                    <a href="{{ item.link }}" target="_blank" class="flex flex-row items-center">
                {% endif %}
                        <svg class="mr-4" width="30" height="32" viewBox="0 0 42 44" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M42 18.0782L41.5676 16.1295L32.6138 16.2278L38.2709 9.06364L37.0649 7.49981L29.0394 11.5977L31.1221 2.61183L29.3766 1.74395L23.8702 9.03089L21.97 0H20.03L18.1298 9.03089L12.6234 1.74395L10.8779 2.61183L12.9606 11.5977L4.93511 7.49981L3.7291 9.06364L9.38623 16.2278L0.432417 16.1295L0 18.0782L8.10881 22L0 25.9218L0.432417 27.8705L9.38623 27.7722L3.7291 34.9364L4.93511 36.5002L12.9606 32.4023L10.8779 41.3882L12.6234 42.256L18.1298 34.9691L20.03 44H21.97L23.8702 34.9691L29.3766 42.256L31.1221 41.3882L29.0394 32.4023L37.0649 36.5002L38.2709 34.9364L32.6138 27.7722L41.5676 27.8705L42 25.9218L33.8912 22L42 18.0782Z" fill="#FFB800"/>
                        </svg>
                        <span>
                            {{ item.name }}
                        </span>
                 {% if item.link %}
                    </a>
                {% endif %}
            </li>
        {% endfor %}
    </ul>

    <img
        src="{{ post.splash_image }}"
        alt="{{ post.title }}"
        class="lazyload w-full object-cover lg:my-16"
    />

    <div class="hidden lg:flex flex-row">
        <div class="w-full lg:w-1/2">
            <p>
                {{ post.quote }}
            </p>
        </div>

        {# awards list (desktop) #}
        <div class="w-full lg:w-1/2 flex flex-col pl-20">
            {% if post.awards|length > 0 %}
                <div class="flex flex-col pr-20">
                    <h6 class="uppercase text-sm sans-bold tracking-wider">
                        Awards
                    </h6>
                    <ul class="my-4">
                        {% for item in post.awards %}
                            {% if item.link|length %}
                                <a href="{{ item.link }}" target="_blank" class="flex flex-row items-center">
                            {% endif %}
                                <li class="flex flex-row items-center mb-4">
                                            <svg class="mr-4" width="30" height="32" viewBox="0 0 42 44" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                <path d="M42 18.0782L41.5676 16.1295L32.6138 16.2278L38.2709 9.06364L37.0649 7.49981L29.0394 11.5977L31.1221 2.61183L29.3766 1.74395L23.8702 9.03089L21.97 0H20.03L18.1298 9.03089L12.6234 1.74395L10.8779 2.61183L12.9606 11.5977L4.93511 7.49981L3.7291 9.06364L9.38623 16.2278L0.432417 16.1295L0 18.0782L8.10881 22L0 25.9218L0.432417 27.8705L9.38623 27.7722L3.7291 34.9364L4.93511 36.5002L12.9606 32.4023L10.8779 41.3882L12.6234 42.256L18.1298 34.9691L20.03 44H21.97L23.8702 34.9691L29.3766 42.256L31.1221 41.3882L29.0394 32.4023L37.0649 36.5002L38.2709 34.9364L32.6138 27.7722L41.5676 27.8705L42 25.9218L33.8912 22L42 18.0782Z" fill="#FFB800"/>
                                            </svg>
                                            <span>
                                                {{ item.name }}
                                            </span>
                                </li>
                            {% if item.link|length %}
                                </a>
                            {% endif %}
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}

            {# work types / disciplines #}
            {% if post.work_types|length > 0 %}
                <div class="flex flex-col pr-20">
                    <h6 class="uppercase text-sm sans-bold tracking-wider">
                        Disciplines
                    </h6>
                    <ul class="my-4">
                        {% for item in post.work_types %}
                            <li class="mb-4">
                                {{ item }}
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}

            {# results list #}
            {% if post.results|length > 0 %}
                <div class="flex flex-col pr-20">
                    <h6 class="uppercase text-sm sans-bold tracking-wider">
                        Results
                    </h6>
                    <ul class="my-4">
                        {% for item in post.results %}
                            <li class="flex flex-row items-center mb-4">
                                <svg class="mr-4" width="14" height="14" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M5.939 13.184H8.019V7.84H13.299V5.952H8.019V0.575999H5.939V5.952H0.691V7.84H5.939V13.184Z" fill="black"/>
                                </svg>
                                <span>
                                    {{ item.stat }} {{ item.text }}
                                </span>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}

        </div>
    </div>

</div>
