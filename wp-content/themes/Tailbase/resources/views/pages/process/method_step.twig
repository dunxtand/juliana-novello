<div class="border-t border-black my-4 mr-5 lg:mx-4">

    <div class="flex flex-row mt-8 mb-4 text-xl">
        <span class="mr-6">
            {{ method_step.number }}
        </span>
        <span>
            {{ method_step.title }}
        </span>
    </div>

    <div class="mt-4 mb-8">
        <h2 class="text-3xl">
            {{ method_step.headline }}
        </h2>
    </div>

    {% if method_step.description|trim %}
        <div class="mb-4">
            <p>
                <span class="sans-medium">
                    {{ method_step.description|split('. ')|first ~ '.' }}
                </span>
                {{ method_step.description|split('. ')|slice(1)|join('. ') }}
            </p>
        </div>
    {% endif %}

    {% if method_step.links|length > 0 %}
        <div class="flex flex-col">
            {% for link in method_step.links %}
                <site-button
                    url="{{ link.url }}"
                    class="w-100 lg:w-9/12 mb-5 text-md"
                >
                    {{ link.text }}
                </site-button>
            {% endfor %}
        </div>
    {% endif %}
</div>
