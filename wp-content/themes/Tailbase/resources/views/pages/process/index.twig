                <div class="flex justify-center">
                    <p class="w-full lg:w-2/3" data-sal="fade" data-sal-delay="1000" data-sal-duration="800">
                        {{ post.post_content }}
                    </p>
                </div>
                <div class="hidden lg:flex justify-between" data-sal="fade" style="--sal-delay: 0s;" data-sal-duration="800">
                    {% include "components/method_circles.twig" %}
                </div>
            </div>

            <div class="col col-12">
                <div class="flex flex-col mr-2 ml-2 lg:mr-10 lg:ml-40">
                    <lottie-animation
                        class="lottie lg:hidden mb-10"
                        path="process_vertical"
                        when-visible
                    >
                        <template v-slot:fallback>
                            <img
                                src="{{ Image(post.method_steps_image).src }}"
                                alt="Method Steps"
                                class="lazyload mb-20"
                            />
                        </template>
                    </lottie-animation>
                </div>
            </div>

            <div class="col col-12">
                <div class="hidden w-full lg:flex flex-wrap justify-between -mx-4 mb-24">
                    {% for item in post.meta('method_steps') %}
                        {% set method_step = item %}
                        <div data-sal="slide-up" data-sal-delay="{{ loop.index is odd ? 100 : 300 }}" data-sal-duration="800" class="w-full lg:w-1/2">
                            {% include 'pages/process/method_step.twig' %}
                        </div>
                    {% endfor %}
                </div>

                <div class="lg:hidden overflow-x-hidden" data-sal="fade-in" data-sal-duration="800" style="--sal-delay: 0s;">
                    <twig-carousel>
                        {% for item in post.meta('method_steps') %}
                            {% set method_step = item %}
                            <slide>
                                {% include 'pages/process/method_step.twig' %}
                            </slide>
                        {% endfor %}
                    </twig-carousel>
                </div>
            </div>
        </div>

        {% set flex_blocks = flexblock %}

        {% if flex_blocks %}

            {% include 'blocks/flex-content.twig' with flex_blocks %}

        {% endif %}

